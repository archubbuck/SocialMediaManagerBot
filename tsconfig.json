{
	"compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
		"outDir": "./dist",
		"target": "es2019",
		"allowJs": true,
		"checkJs": false,
		"skipLibCheck": true,
		"types": ["node", "node-fetch", "klasa", "discord.js"]
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules", "**/dist"]
}